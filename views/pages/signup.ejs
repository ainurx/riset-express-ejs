<%- include('../components/head') %> 
  <style>
    .card{
      margin-top: 15%;
    }
    form{
      width: 400px;
    }
  </style>
    <div class="container mx-auto">
      <div class="card">
        <br/>
        <form class="mx-auto" method="POST" action="/admin/signup">
          <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input name="username" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Nama</label>
            <input name="nama" type="text" class="form-control" id="inputName" placeholder="Enter Name">
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <button class="btn btn-outline-secondary" type="button">Role</button>
            </div>
            <select name="role" class="custom-select" id="inputGroupSelect03">
              <option selected>Choose...</option>
              <option value="admin">Admin</option>
              <option value="user">User</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br/>
      </div>
    </div>
